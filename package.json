{
  "name": "@cmiretf/pattern-police-mcp",
  "version": "1.0.1",
  "description": "MCP Server para validación de patrones de diseño en TypeScript/JavaScript",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "pattern-police": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "inspect:dev": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "design-patterns",
    "code-quality",
    "linting",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/node": "^22.13.11",
    "@typescript-eslint/parser": "^8.46.4",
    "@typescript-eslint/typescript-estree": "^8.46.4",
    "@vue/compiler-sfc": "^3.5.24",
    "java-parser": "^3.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
